<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/origami_sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoOverlay="true">

        <RelativeLayout
            android:id="@+id/parallaxContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:background="@color/transparent4"
            android:layout_marginTop="90dp">

            <RelativeLayout
                android:id="@+id/origami_elements_bar"
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <TextView
                    android:id="@+id/origami_create_button"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="D"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/origami_type_one_button"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/origami_create_button"
                    android:text="F"
                    android:textSize="50sp"
                    android:paddingRight="30dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/origami_type_three_button"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/origami_create_button"
                    android:text="W"
                    android:textSize="50sp"
                    android:paddingLeft="30dp"
                    android:visibility="invisible"/>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/fold_origami_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:textSize="15dp"
                android:text="Fold and origami"
                android:textColor="@color/white"
                android:gravity="center|top"/>
            </LinearLayout>

