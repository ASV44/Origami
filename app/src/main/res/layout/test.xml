<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_marginRight="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/check_sm"
            android:id="@+id/check_icon"/>
    </FrameLayout>

    <TextView
        android:id="@+id/friend_nickname"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="text"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/friend_email"
        android:layout_alignEnd="@+id/friend_email" />

    <TextView
        android:id="@+id/friend_email"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Some User"
        android:textColor="@color/black"
        android:layout_below="@+id/friend_nickname"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/more"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/frameLayout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</RelativeLayout>